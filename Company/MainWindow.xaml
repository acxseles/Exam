<Window x:Class="Company.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Company"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <StackPanel>
        <TextBox Margin="0,20,0,0" Width="400"/>
        <Button x:Name="SearchButton" Height="20" Width="300" Content="Поиск" Click="SearchButton_Click"/>
        <Button Height="20" Width="300" Content="Сбосить"/>
        <DataGrid x:Name="ItemsDataGrid" Margin="0,30,0,0" ItemsSource="{Binding Employee}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Табельный номер" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding MiddleName}"/>
                <DataGridTextColumn Header="Зарплата" Binding="{Binding Wages}"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
